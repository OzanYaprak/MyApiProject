@model AddStaffViewModel
@{
    ViewData["Title"] = "AddStaff";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<form asp-controller="Staff" asp-action="AddStaff" method="post">
    <label>Personel Adı</label>
    <input type="text" class="form-control" asp-for="Name"/>

    <br />

    <label>Personel Ünvanı</label>
    <input type="text" class="form-control" asp-for="Title" />

    <br />

    <label>Sosyal Medya 1</label>
    <input type="text" class="form-control" asp-for="SocialMedia1" />

    <br />

    <label>Sosyal Medya 2</label>
    <input type="text" class="form-control" asp-for="SocialMedia2" />

    <br />

    <label>Sosyal Medya 3</label>
    <input type="text" class="form-control" asp-for="SocialMedia3" />

    <br />
    <button class="btn btn-primary">Personeli Ekle</button>
</form>

