@model IEnumerable<StaffViewModel>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<table class="table table-bordered">
    <tr class="text-center">
        <th>#</th>
        <th>Personel Adı</th>
        <th>Personel Ünvanı</th>
        <th>Sil</th>
        <th>Güncelle</th>
        <th>Detaylar</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr class="text-center">
            <td>@item.StaffID</td>
            <td>@item.Name</td>
            <td>@item.Title</td>
            <td><a asp-area="Admin" asp-controller="Staff" asp-action="DeleteStaff" asp-route-id="@item.StaffID" class="btn btn-danger">Sil</a></td>
            <td><a asp-area="Admin" asp-controller="Staff" asp-action="UpdateStaff" asp-route-id="@item.StaffID" class="btn btn-success">Güncelle</a></td>
            <td><a href="#" class="btn btn-dark">Detaylar</a></td>
        </tr>
    }
</table>
<a asp-area="Admin" asp-controller="Staff" asp-action="AddStaff" class="btn btn-info text-white">Yeni Personel Girişi</a>
